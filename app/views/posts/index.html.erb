<% @posts.each_slice(4) do |row| %>
  <div class="row">
    <% row.each do |post| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to(image_tag(post.image.url :small), post_path(post)) %>
          </div>
          <div class="name">
            <%= link_to post.user.name %>
          </div>
          <div class="caption">
            <%= link_to post.title, post_path(post) %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
